                <Border Grid.Column="2" Grid.Row="2" Margin="0,10,50,10" Background="Gray"/>
                <Border Grid.Column="1" Grid.Row="1" Margin="25,10,25,10" CornerRadius="10" Background="Gray"/>

                    <MediaElement Grid.Column="0" Grid.Row="0" Margin="50,10,0,10" />
                    <MediaElement Grid.Column="1" Grid.Row="0" Margin="25,10,25,10" />
                    <MediaElement Grid.Column="2" Grid.Row="0" Margin="0,10,50,10"  />
                    <MediaElement Grid.Column="0" Grid.Row="1" Margin="50,10,0,10"  />
                    <MediaElement Grid.Column="2" Grid.Row="1" Margin="0,10,50,10"  />
                    <MediaElement Grid.Column="0" Grid.Row="2" Margin="50,10,0,10"  />
                    <MediaElement Grid.Column="1" Grid.Row="2" Margin="25,10,25,10"  />
                    <MediaElement Grid.Column="1" Grid.Row="1" Margin="25,10,25,10"  />
                    <MediaElement Grid.Column="2" Grid.Row="2" Margin="0,10,50,10"  />

                


            </Grid>
        </Grid>

        
        
        <Menu Grid.Row="0" VerticalAlignment="Top" Background="#5992BD">
            <MenuItem Header="File">
                <MenuItem Header="Open File"></MenuItem>
                <MenuItem Header="Save File"></MenuItem>
                <MenuItem Header="Lock"></MenuItem>
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="View">
                <CheckBox Content="Fullscreen"></CheckBox>
                <CheckBox Content="Switch"></CheckBox>
                <MenuItem Header="Grid Views"></MenuItem>
                <MenuItem Header="Clear All Capture"></MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"></MenuItem>
                <MenuItem Header="Support"></MenuItem>
                <MenuItem Header="Go To Website"></MenuItem>
            </MenuItem>
        </Menu>


    </Grid>
</Window>
